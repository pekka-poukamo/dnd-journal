{
  "name": "dnd-journal",
  "version": "1.0.0",
  "description": "A lightweight, static D&D journal app focused on core functionality: note-taking, character tracking, and AI-powered roleplay prompts.",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "test": "npm run guard && npm run test:client && npm run test:server",
    "test:client": "node --experimental-modules node_modules/.bin/mocha --require test/setup.js \"test/**/*.test.js\" --timeout 10000 --reporter spec --exit",
    "test:server": "cd server && npm test",
    "test:watch": "mocha test/**/*.test.js --watch --timeout 5000",
    "test:coverage": "npm run coverage:client && npm run coverage:server",
    "coverage:client": "c8 npm run test:client",
    "coverage:server": "cd server && npm run test:coverage",
    "validate": "echo 'Validating static files...' && test -f index.html && echo 'âœ… All files valid'",
    "deploy": "git push pi",
    "server": "cd server && npm start",
    "setup": "npm ci && cd server && npm ci",
    "guard": "node scripts/guard.js",
    "setup:server": "cd server && npm ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pekka-poukamo/dnd-journal.git"
  },
  "keywords": [
    "dnd",
    "journal",
    "static",
    "roleplay",
    "character-management",
    "local-first",
    "yjs",
    "sync"
  ],
  "author": "pekka-poukamo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pekka-poukamo/dnd-journal/issues"
  },
  "homepage": "",
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.5.0",
    "http-server": "^14.1.1",
    "jsdom": "^23.2.0",
    "mocha": "^10.8.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^1.5.4",
    "yjs": "^13.6.27"
  }
}
