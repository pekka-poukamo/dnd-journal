{
  "name": "dnd-journal",
  "version": "1.0.0",
  "description": "Simple D&D journal with localStorage persistence and optional Yjs sync",
  "main": "index.html",
  "scripts": {
    "test": "mocha test/**/*.test.js --timeout 5000",
    "sync-server": "y-websocket-server --port 1234",
    "inject-sync": "node scripts/inject-sync-config.js",
    "build:with-sync": "npm run inject-sync && echo 'Build complete with sync configuration'"
  },
  "keywords": ["dnd", "journal", "local-first", "yjs", "sync"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.4.0"
  },
  "optionalDependencies": {
    "y-websocket": "^1.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}