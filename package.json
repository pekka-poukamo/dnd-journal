{
  "name": "dnd-journal",
  "version": "1.0.0",
  "description": "A lightweight, static D&D journal app focused on core functionality: note-taking, character tracking, and AI-powered roleplay prompts.",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "build": "echo 'No build step needed - static site' && exit 0",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:watch": "mocha test/**/*.test.js --watch --timeout 10000",
    "test:coverage": "c8 npm test",
    "coverage:html": "c8 --reporter=html npm test",
    "coverage:check": "c8 --check-coverage --lines 95 npm test",
    "coverage:warn": "c8 --reporter=text --reporter=json-summary npm test && node scripts/coverage-check.cjs",
    "coverage:agent": "c8 --reporter=json-summary npm test && node scripts/coverage-agent.cjs",
    "coverage:agent:summary": "c8 --reporter=json-summary npm test && node scripts/coverage-agent.cjs summary",
    "coverage:agent:files": "c8 --reporter=json-summary npm test && node scripts/coverage-agent.cjs files",
    "pre-commit": "./scripts/pre-commit.sh",
    "validate": "echo 'Validating static files...' && test -f index.html && echo 'âœ… All files valid'",
    "deploy": "surge .",
    "deploy:domain": "surge . dnd-journal.surge.sh",
    "sync-server": "y-websocket-server --port 1234"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pekka-poukamo/dnd-journal.git"
  },
  "keywords": [
    "dnd",
    "journal",
    "static",
    "roleplay",
    "character-management",
    "local-first",
    "yjs",
    "sync"
  ],
  "author": "pekka-poukamo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pekka-poukamo/dnd-journal/issues"
  },
  "homepage": "https://dnd-journal.surge.sh",
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^4.3.10",
    "http-server": "^14.1.1",
    "jsdom": "^23.0.0",
    "mocha": "^10.2.0",
    "surge": "^0.23.1"
  },
  "optionalDependencies": {
    "y-websocket": "^1.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
