{
  "name": "dnd-journal",
  "version": "1.0.0",
  "description": "Simple D&D journal with localStorage persistence and optional Yjs sync",
  "main": "index.html",
  "scripts": {
    "test": "mocha test/**/*.test.js --timeout 5000",
    "start": "node server/sync-server.js",
    "server": "node server/sync-server.js",
    "server:dev": "nodemon server/sync-server.js",
    "deploy:pi": "node scripts/deploy-to-pi.js",
    "setup:pi": "node scripts/setup-pi.js",
    "pi:start": "pm2 start server/sync-server.js --name dnd-journal-sync",
    "pi:stop": "pm2 stop dnd-journal-sync",
    "pi:restart": "pm2 restart dnd-journal-sync",
    "pi:logs": "pm2 logs dnd-journal-sync",
    "pi:status": "pm2 status dnd-journal-sync"
  },
  "keywords": ["dnd", "journal", "local-first", "yjs", "sync"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.10",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.5",
    "node-ssh": "^13.1.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}